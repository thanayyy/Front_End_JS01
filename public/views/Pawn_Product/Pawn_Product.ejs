}

h1 {
    text-align: center;
    margin-bottom: 20px;
}

label {
    margin-bottom: 5px;
    display: block;
}

input[type="text"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
}

input[type="submit"] {
    display: inline-block;
    padding: 5px 8px;
    margin-right: 5px;
    font-size: 16px;
    background-color: #fff;
    text-decoration: none;
    color: #007bff;
    border: 1px solid #007bff;
    border-radius: 5px;
}

input[type="submit"]:hover {
    background-color: #007bff;
    color: #fff;
    border-color: #007bff;
}

a {
    display: inline-block;
    padding: 5px 10px;
    margin-right: 5px;
    text-decoration: none;
    color: #007bff;
    border: 1px solid #007bff;
    border-radius: 5px;
}

a:hover {
    background-color: #007bff;
    color: #fff;
    border-color: #007bff;
}

